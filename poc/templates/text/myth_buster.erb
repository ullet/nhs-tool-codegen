MYTH BUSTER:
  TITLE: <%= title %><% if introduction? %>
  INTRODUCTION:
    TEXT: <%= introduction.text %>
    IMAGE: <%= introduction.image.url %>
    START_BUTTON_TEXT: <%= introduction.start_button_text %><% end %><% if related.links? %>
  MORE_INFORMATION:
    TEXT: <%= related.text %><% if related.links? %>
    LINKS:<% related.links.each do |link| %>
      LINK:
        URL: <%= link.url %>
        TEXT: <%= link.url %><% end %><% end %><% end %><% if questions? %>
  QUESTIONS:<% questions.each do |question| %>
    QUESTION:
      STATEMENT: <%= question.statement %>
      ANSWER: <%= question.statement_true? %>
      EXPLANATION: <%= question.explanation %><% end %><% end %>
